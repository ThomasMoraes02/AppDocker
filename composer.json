{
    "name": "thomas/apache-php-mysql",
    "description": "Praticando com Docker",
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6",
        "php-di/php-di": "^7.0",
        "phpunit/phpunit": "^10.5",
        "firebase/php-jwt": "^6.10",
        "slim/twig-view": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Thomas Moraes",
            "email": "tho.vini7@gmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^2.28",
        "phpstan/phpstan": "^1.10"
    }
}
